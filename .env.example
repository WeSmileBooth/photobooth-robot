# Firebase Configuration
# Used for authentication and storage in the application
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Application URLs
# VITE_MOBILE_APP_URL is the URL where the mobile companion app is hosted
VITE_MOBILE_APP_URL=https://your-mobile-app-url.vercel.app/

# VITE_SERVER_URL is the base URL for your server
# In development, this would typically be http://0.0.0.0:5040 or http://localhost:5040
# In production, this would be your deployed server URL
VITE_SERVER_URL=http://0.0.0.0:5040

# API endpoints
# URL for backend API services
VITE_API=https://your-api-endpoint.com

# Ngrok Configuration
# Authentication token for ngrok tunneling
# Create an account at https://ngrok.com/ to get your auth token
NGROK_AUTHTOKEN=your_ngrok_auth_token